<!DOCTYPE html>
<html lang="en">
<head>
    <%-include('partials/head.ejs')%>
    <title>Document</title>
</head>
<body>
    <%-include('partials/headerProfile.ejs')%>
    <div class="container">
        <div class="main">
            <form action="/api/new" method="POST" class="form" enctype="multipart/form-data">
                <h3>Новый блог</h3>
                <fieldset class="fieldset">
                    <label for="">Название блога</label>
                    <input type="text" placeholder="Введите название блога" name="titleBlog">
                </fieldset>
                <fieldset class="fieldset">
                    <label for="">Категория блога</label>
                    <select name="category" id="">
                        <%category.forEach(categ =>{ %>
                            <option value="<%=categ._id%>"><%=categ.name%></option>
                        <%})%>
                    </select>
                </fieldset>
                <fieldset class="fieldset-img">
                    <label for="">Выберите картинку</label>
                    <input type="file"  name="image">
                </fieldset>
                <fieldset class="fieldset-img fieldset-img-last-child">
                    <label for="" >Описание блога</label>
                    <input  type="text" placeholder="Введите описание блога" name="content">
                </fieldset>
                <fieldset class="fieldset">  
                    <button type="submit">Добавить</button>
                </fieldset>
            </form>
        </div>
    </div>

</body>
</html>